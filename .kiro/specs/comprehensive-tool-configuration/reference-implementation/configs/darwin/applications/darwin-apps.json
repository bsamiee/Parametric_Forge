{
  "_comment": "Title: darwin-apps.json",
  "_comment2": "Author: Bardia Samiee",
  "_comment3": "Project: Parametric Forge",
  "_comment4": "License: MIT",
  "_comment5": "Path: configs/darwin/applications/darwin-apps.json",
  "_comment6": "macOS-specific application configuration and metadata",
  
  "essential_apps": [
    {
      "name": "Safari",
      "bundle_id": "com.apple.Safari",
      "path": "/Applications/Safari.app",
      "category": "web_browser",
      "default_for": ["http", "https", "html"],
      "description": "Default macOS web browser"
    },
    {
      "name": "Visual Studio Code",
      "bundle_id": "com.microsoft.VSCode",
      "path": "/Applications/Visual Studio Code.app",
      "category": "development",
      "default_for": ["source_code", "text_files"],
      "description": "Primary code editor"
    },
    {
      "name": "WezTerm",
      "bundle_id": "com.github.wez.wezterm",
      "path": "/Applications/WezTerm.app",
      "category": "terminal",
      "default_for": ["terminal"],
      "description": "Primary terminal emulator"
    },
    {
      "name": "1Password",
      "bundle_id": "com.1password.1password",
      "path": "/Applications/1Password 7 - Password Manager.app",
      "category": "security",
      "default_for": ["password_management"],
      "description": "Password manager and security tool"
    }
  ],
  
  "development_apps": [
    {
      "name": "Docker Desktop",
      "bundle_id": "com.docker.docker",
      "path": "/Applications/Docker Desktop.app",
      "category": "development",
      "description": "Container development platform"
    },
    {
      "name": "Postman",
      "bundle_id": "com.postmanlabs.mac",
      "path": "/Applications/Postman.app",
      "category": "development",
      "description": "API development and testing"
    },
    {
      "name": "TablePlus",
      "bundle_id": "com.tinyapp.TablePlus",
      "path": "/Applications/TablePlus.app",
      "category": "development",
      "description": "Database management tool"
    },
    {
      "name": "Proxyman",
      "bundle_id": "com.proxyman.NSProxy",
      "path": "/Applications/Proxyman.app",
      "category": "development",
      "description": "HTTP debugging proxy"
    }
  ],
  
  "utility_apps": [
    {
      "name": "The Unarchiver",
      "bundle_id": "cx.c3.theunarchiver",
      "path": "/Applications/The Unarchiver.app",
      "category": "utility",
      "default_for": ["archives"],
      "description": "Archive extraction utility"
    },
    {
      "name": "CleanMyMac X",
      "bundle_id": "com.macpaw.CleanMyMac4",
      "path": "/Applications/CleanMyMac X.app",
      "category": "utility",
      "description": "System maintenance and cleanup"
    },
    {
      "name": "Activity Monitor",
      "bundle_id": "com.apple.ActivityMonitor",
      "path": "/System/Applications/Activity Monitor.app",
      "category": "system",
      "description": "System process and resource monitor"
    },
    {
      "name": "System Preferences",
      "bundle_id": "com.apple.systempreferences",
      "path": "/System/Applications/System Preferences.app",
      "category": "system",
      "description": "System configuration"
    }
  ],
  
  "macos_specific_tools": [
    {
      "name": "mas",
      "type": "cli",
      "description": "Mac App Store command line interface",
      "usage": "mas search <app>, mas install <id>"
    },
    {
      "name": "dockutil",
      "type": "cli",
      "description": "Dock management utility",
      "usage": "dockutil --add <app>, dockutil --remove <app>"
    },
    {
      "name": "pngpaste",
      "type": "cli",
      "description": "Paste PNG images from clipboard",
      "usage": "pngpaste output.png"
    },
    {
      "name": "duti",
      "type": "cli",
      "description": "Default application manager",
      "usage": "duti -s com.app.bundle .ext all"
    },
    {
      "name": "switchaudio-osx",
      "type": "cli",
      "description": "Audio device switching utility",
      "usage": "SwitchAudioSource -s <device>"
    },
    {
      "name": "osx-cpu-temp",
      "type": "cli",
      "description": "CPU temperature monitor",
      "usage": "osx-cpu-temp"
    },
    {
      "name": "m-cli",
      "type": "cli",
      "description": "macOS system management CLI",
      "usage": "m info, m update, m restart"
    }
  ],
  
  "file_associations": {
    "development": {
      "extensions": [".js", ".ts", ".py", ".rs", ".go", ".java", ".c", ".cpp", ".h", ".hpp"],
      "default_app": "com.microsoft.VSCode"
    },
    "configuration": {
      "extensions": [".json", ".yaml", ".yml", ".toml", ".ini", ".conf"],
      "default_app": "com.microsoft.VSCode"
    },
    "markup": {
      "extensions": [".md", ".rst", ".txt"],
      "default_app": "com.microsoft.VSCode"
    },
    "archives": {
      "extensions": [".zip", ".tar", ".gz", ".bz2", ".7z", ".rar"],
      "default_app": "cx.c3.theunarchiver"
    },
    "images": {
      "extensions": [".png", ".jpg", ".jpeg", ".gif", ".bmp", ".tiff", ".webp"],
      "default_app": "com.apple.Preview"
    },
    "documents": {
      "extensions": [".pdf"],
      "default_app": "com.apple.Preview"
    }
  },
  
  "dock_configuration": {
    "essential_order": [
      "/Applications/Safari.app",
      "/Applications/Visual Studio Code.app",
      "/Applications/WezTerm.app",
      "/Applications/1Password 7 - Password Manager.app"
    ],
    "development_order": [
      "/Applications/Docker Desktop.app",
      "/Applications/Postman.app",
      "/Applications/TablePlus.app",
      "/Applications/Proxyman.app"
    ],
    "utility_order": [
      "/Applications/The Unarchiver.app",
      "/Applications/CleanMyMac X.app",
      "/System/Applications/Activity Monitor.app",
      "/System/Applications/System Preferences.app"
    ],
    "folders": [
      {
        "path": "~/Downloads",
        "view": "fan",
        "sort": "name"
      },
      {
        "path": "/Applications",
        "view": "grid",
        "sort": "name"
      },
      {
        "path": "~/Development",
        "view": "list",
        "sort": "name"
      }
    ]
  },
  
  "system_preferences": {
    "dock": {
      "size": 48,
      "magnification": true,
      "magnification_size": 64,
      "position": "bottom",
      "autohide": true,
      "show_recents": false
    },
    "finder": {
      "show_hidden_files": true,
      "show_extensions": true,
      "show_status_bar": true,
      "show_path_bar": true
    },
    "security": {
      "require_password_immediately": true,
      "show_password_hints": false
    }
  }
}