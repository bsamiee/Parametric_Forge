{
  "_comment": "Title: config.json",
  "_author": "Bardia Samiee",
  "_project": "Parametric Forge",
  "_license": "MIT",
  "_path": "01.home/00.core/configs/containers/docker/config.json",
  "_description": "Docker CLI configuration with registry settings and optimizations",
  
  "_section_comment": "--- Registry Configuration ---",
  "auths": {
    "_comment": "Registry authentication (populated by docker login)"
  },
  
  "credHelpers": {
    "_comment": "Credential helpers for different registries",
    "gcr.io": "gcr",
    "us.gcr.io": "gcr",
    "eu.gcr.io": "gcr",
    "asia.gcr.io": "gcr",
    "staging-k8s.gcr.io": "gcr",
    "marketplace.gcr.io": "gcr"
  },
  
  "credsStore": "osxkeychain",
  
  "_section_comment": "--- Registry Mirrors ---",
  "registry-mirrors": [
    "_comment": "Add registry mirrors for faster pulls",
    "https://mirror.gcr.io"
  ],
  
  "insecure-registries": [
    "_comment": "Insecure registries (use with caution)",
    "localhost:5000"
  ],
  
  "_section_comment": "--- Build Configuration ---",
  "buildkit": true,
  
  "experimental": "enabled",
  
  "features": {
    "buildkit": true
  },
  
  "_section_comment": "--- CLI Configuration ---",
  "cli": {
    "experimental": "enabled",
    "context": "default",
    "debug": false,
    "format": "table",
    "orchestrator": "swarm"
  },
  
  "_section_comment": "--- Plugin Configuration ---",
  "plugins": {
    "docker-buildx": {
      "enabled": true,
      "version": "latest"
    },
    "docker-compose": {
      "enabled": true,
      "version": "latest"
    },
    "docker-scan": {
      "enabled": false,
      "version": "latest"
    }
  },
  
  "_section_comment": "--- Proxy Configuration ---",
  "proxies": {
    "default": {
      "httpProxy": "",
      "httpsProxy": "",
      "noProxy": "localhost,127.0.0.1,::1,.local"
    }
  },
  
  "_section_comment": "--- Security Configuration ---",
  "security": {
    "trust": {
      "enabled": false,
      "offline": false
    },
    "content-trust": {
      "enabled": false,
      "server": "https://notary.docker.io"
    }
  },
  
  "_section_comment": "--- Logging Configuration ---",
  "log-driver": "json-file",
  "log-opts": {
    "max-size": "10m",
    "max-file": "3",
    "compress": "true"
  },
  
  "_section_comment": "--- Storage Configuration ---",
  "storage-driver": "overlay2",
  "storage-opts": [
    "overlay2.override_kernel_check=true"
  ],
  
  "_section_comment": "--- Network Configuration ---",
  "default-network-opts": {
    "bridge": {
      "com.docker.network.bridge.enable_icc": "true",
      "com.docker.network.bridge.enable_ip_masquerade": "true",
      "com.docker.network.bridge.host_binding_ipv4": "0.0.0.0",
      "com.docker.network.driver.mtu": "1500"
    }
  },
  
  "_section_comment": "--- Resource Limits ---",
  "default-ulimits": {
    "nofile": {
      "Name": "nofile",
      "Hard": 64000,
      "Soft": 64000
    },
    "memlock": {
      "Name": "memlock",
      "Hard": -1,
      "Soft": -1
    }
  },
  
  "_section_comment": "--- Runtime Configuration ---",
  "default-runtime": "runc",
  "runtimes": {
    "runc": {
      "path": "runc"
    }
  },
  
  "_section_comment": "--- Image Configuration ---",
  "max-concurrent-downloads": 6,
  "max-concurrent-uploads": 5,
  "max-download-attempts": 5,
  
  "_section_comment": "--- Build Cache Configuration ---",
  "builder": {
    "gc": {
      "enabled": true,
      "policy": [
        {
          "keepStorage": "10GB",
          "filter": [
            "unused-for=24h"
          ]
        },
        {
          "keepStorage": "50GB",
          "all": true
        }
      ]
    }
  },
  
  "_section_comment": "--- Context Configuration ---",
  "contexts": {
    "default": {
      "description": "Default Docker context",
      "docker": {
        "host": "unix:///var/run/docker.sock"
      }
    }
  },
  
  "_section_comment": "--- CLI Aliases ---",
  "aliases": {
    "ps": "ps -a",
    "images": "images -a",
    "logs": "logs -f",
    "exec": "exec -it",
    "run": "run --rm -it"
  },
  
  "_section_comment": "--- Output Formatting ---",
  "psFormat": "table {{.Names}}\\t{{.Image}}\\t{{.Status}}\\t{{.Ports}}",
  "imagesFormat": "table {{.Repository}}\\t{{.Tag}}\\t{{.ID}}\\t{{.Size}}\\t{{.CreatedSince}}",
  "statsFormat": "table {{.Container}}\\t{{.CPUPerc}}\\t{{.MemUsage}}\\t{{.MemPerc}}\\t{{.NetIO}}\\t{{.BlockIO}}",
  
  "_section_comment": "--- Development Settings ---",
  "detachKeys": "ctrl-p,ctrl-q",
  "pidfile": "",
  "graph": "",
  "exec-root": "",
  
  "_section_comment": "--- Performance Tuning ---",
  "max-concurrent-downloads": 6,
  "max-concurrent-uploads": 5,
  "shutdown-timeout": 15,
  
  "_section_comment": "--- Debugging ---",
  "debug": false,
  "log-level": "info",
  "tls": false,
  "tlsverify": false,
  "tlscacert": "",
  "tlscert": "",
  "tlskey": "",
  
  "_section_comment": "--- Swarm Configuration ---",
  "swarm": {
    "default-addr-pool": [
      "10.20.0.0/16"
    ],
    "default-addr-pool-mask-length": 24
  },
  
  "_section_comment": "--- Metrics Configuration ---",
  "metrics-addr": "",
  "experimental": true,
  
  "_section_comment": "--- Custom Labels ---",
  "labels": [
    "environment=development",
    "project=parametric-forge"
  ],
  
  "_section_comment": "--- DNS Configuration ---",
  "dns": [
    "1.1.1.1",
    "8.8.8.8"
  ],
  "dns-search": [
    "local"
  ],
  "dns-opt": [
    "ndots:2",
    "edns0"
  ],
  
  "_section_comment": "--- Security Options ---",
  "seccomp-profile": "",
  "selinux-enabled": false,
  "userns-remap": "",
  
  "_section_comment": "--- Cgroup Configuration ---",
  "cgroup-parent": "",
  "default-cgroupns-mode": "private",
  
  "_section_comment": "--- Registry Configuration ---",
  "allow-nondistributable-artifacts": [],
  "registry-mirrors": [],
  "insecure-registries": [
    "localhost:5000"
  ],
  
  "_section_comment": "--- Build Configuration ---",
  "buildkit-config": {
    "debug": false,
    "gc": {
      "enabled": true,
      "policy": [
        {
          "keepStorage": "10GB",
          "filter": [
            "unused-for=24h"
          ]
        }
      ]
    },
    "history": {
      "maxAge": "168h",
      "maxEntries": 50
    }
  }
}