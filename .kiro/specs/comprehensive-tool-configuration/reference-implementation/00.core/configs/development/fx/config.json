  "_section_comment": "--- Key Bindings ---",
  "keybindings": {
    "quit": ["q", "ctrl+c"],
    "help": ["?", "h"],
    "search": ["/"],
    "search_next": ["n"],
    "search_previous": ["N"],
    "goto_top": ["g", "home"],
    "goto_bottom": ["G", "end"],
    "page_up": ["ctrl+b", "page_up"],
    "page_down": ["ctrl+f", "page_down"],
    "scroll_up": ["k", "up"],
    "scroll_down": ["j", "down"],
    "scroll_left": ["h", "left"],
    "scroll_right": ["l", "right"],
    "expand_all": ["E"],
    "collapse_all": ["C"],
    "toggle_expand": ["space", "enter"],
    "copy_path": ["y"],
    "copy_value": ["Y"],
    "toggle_line_numbers": ["L"],
    "toggle_types": ["T"],
    "toggle_sizes": ["S"],
    "refresh": ["r", "f5"],
    "edit": ["e"],
    "save": ["ctrl+s"],
    "undo": ["u", "ctrl+z"],
    "redo": ["ctrl+r", "ctrl+y"]
  },
  
  "_section_comment": "--- Editor Settings ---",
  "editor": {
    "command": "$EDITOR",
    "args": [],
    "temp_file_prefix": "fx_edit_",
    "temp_file_suffix": ".json",
    "auto_save": false,
    "backup_on_edit": true
  },
  
  "_section_comment": "--- Search Settings ---",
  "search": {
    "incremental": true,
    "wrap_around": true,
    "regex_support": true,
    "highlight_all_matches": true,
    "max_matches": 1000,
    "case_sensitive": false
  },
  
  "_section_comment": "--- Performance Settings ---",
  "performance": {
    "lazy_loading": true,
    "max_array_preview": 100,
    "max_object_preview": 50,
    "max_string_length": 1000,
    "virtual_scrolling": true,
    "render_buffer_size": 1000
  },
  
  "_section_comment": "--- File Handling ---",
  "file_handling": {
    "auto_detect_format": true,
    "supported_formats": ["json", "jsonl", "yaml", "yml"],
    "max_file_size": "100MB",
    "encoding": "utf-8",
    "line_endings": "auto"
  },
  
  "_section_comment": "--- Export Settings ---",
  "export": {
    "default_format": "json",
    "pretty_print": true,
    "sort_keys": false,
    "ensure_ascii": false,
    "indent_size": 2
  },
  
  "_section_comment": "--- Validation Settings ---",
  "validation": {
    "validate_on_load": true,
    "show_validation_errors": true,
    "strict_mode": false,
    "allow_comments": true,
    "allow_trailing_commas": true
  },
  
  "_section_comment": "--- Integration Settings ---",
  "integration": {
    "shell_completion": true,
    "clipboard_support": true,
    "external_tools": {
      "jq": {
        "enabled": true,
        "command": "jq",
        "args": ["-C"]
      },
      "yq": {
        "enabled": true,
        "command": "yq",
        "args": ["-C"]
      }
    }
  },
  
  "_section_comment": "--- Plugins ---",
  "plugins": {
    "enabled": [],
    "disabled": [],
    "plugin_directory": "$XDG_CONFIG_HOME/fx/plugins",
    "auto_load": true
  },
  
  "_section_comment": "--- History Settings ---",
  "history": {
    "enabled": true,
    "max_entries": 1000,
    "file": "$XDG_DATA_HOME/fx/history.json",
    "save_on_exit": true
  },
  
  "_section_comment": "--- Logging Settings ---",
  "logging": {
    "level": "info",
    "file": "$XDG_DATA_HOME/fx/fx.log",
    "max_size": "10MB",
    "max_files": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  
  "_section_comment": "--- Advanced Settings ---",
  "advanced": {
    "memory_limit": "1GB",
    "gc_threshold": 1000,
    "update_check": true,
    "telemetry": false,
    "crash_reporting": false
  },
  
  "_section_comment": "--- Custom Filters ---",
  "custom_filters": {
    "flatten": "def flatten: if type == \"array\" then map(flatten) | add else . end;",
    "keys_recursive": "def keys_recursive: if type == \"object\" then keys + (to_entries | map(.value | keys_recursive) | add // []) else [] end;",
    "values_recursive": "def values_recursive: if type == \"object\" then (to_entries | map(.value)) + (to_entries | map(.value | values_recursive) | add // []) elif type == \"array\" then . + (map(values_recursive) | add // []) else [.] end;",
    "size_recursive": "def size_recursive: if type == \"object\" then (to_entries | length) + (to_entries | map(.value | size_recursive) | add // 0) elif type == \"array\" then length + (map(size_recursive) | add // 0) else 1 end;"
  },
  
  "_section_comment": "--- Bookmarks ---",
  "bookmarks": {
    "enabled": true,
    "file": "$XDG_DATA_HOME/fx/bookmarks.json",
    "max_bookmarks": 100,
    "auto_save": true
  },
  
  "_section_comment": "--- Diff Settings ---",
  "diff": {
    "enabled": true,
    "algorithm": "myers",
    "context_lines": 3,
    "ignore_whitespace": false,
    "color_diff": true
  }
}