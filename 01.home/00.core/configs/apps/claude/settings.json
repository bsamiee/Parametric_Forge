{
  "permissions": {
    "allow": [
      "Bash(claude mcp:*)",
      "Bash(sqlite3:*)",
      "Bash(grep:*)",
      "Bash(basedpyright:*)",
      "Bash(shellcheck:*)",
      "Read",
      "mcp__codex__codex",
      "mcp__rhino__execute_rhinoscript_python_code",
      "mcp__rhino__get_object_info",
      "mcp__rhino__get_document_info",
      "mcp__perplexity-ask__perplexity_ask",
      "mcp__tavily__tavily-search",
      "mcp__tavily__tavily-crawl",
      "mcp__tavily__tavily-extract",
      "mcp__github__list_commits",
      "mcp__github__get_file_contents",
      "mcp__github__search_code",
      "mcp__github__search_repositories",
      "mcp__github__get_issue",
      "mcp__github__search_issues",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "mcp__exa__web_search_exa",
      "mcp__exa__crawling_exa",
      "mcp__filesystem__read_file",
      "mcp__filesystem__read_multiple_files",
      "mcp__filesystem__directory_tree",
      "mcp__filesystem__search_files",
      "mcp__filesystem__list_directory",
      "mcp__filesystem__list_allowed_directories"
    ],
    "deny": [
      "WebSearch",
      "Bash(clia mcp:*)",
      "mcp__filesystem__write_file",
      "mcp__filesystem__edit_file",
      "mcp__filesystem__move_file",
      "mcp__exa__deep_researcher_start",
      "mcp__exa__deep_researcher_check"
    ],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/ui_prompt_helper.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/tool_control.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/file_cleanup.py"
          }
        ]
      }
    ]
  }
}
