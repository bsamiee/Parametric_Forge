{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "display": {
    "size": {
      "binaryPrefix": "iec",
      "ndigits": 1
    },
    "separator": ": ",
    "key": {
      "width": 16,
      "type": "string"
    },
    "bar": {
      "char": {
        "elapsed": "━",
        "total": "─"
      },
      "width": 18,
      "border": {
        "left": "[ ",
        "right": " ]"
      },
      "color": {
        "elapsed": "#50fa7b",
        "total": "#44475a"
      }
    },
    "percent": {
      "type": 3,
      "color": {
        "green": "#50fa7b",
        "yellow": "#f1fa8c",
        "red": "#ff5555"
      }
    },
    "brightColor": true,
    "color": {
      "keys": "#8be9fd",
      "title": "#ff79c6",
      "separator": "#6272a4",
      "output": "#f8f8f2"
    }
  },
  "logo": {
    "type": "auto",
    "width": 28,
    "height": 16,
    "padding": {
      "top": 1,
      "right": 5,
      "left": 0
    },
    "printRemaining": true,
    "preserveAspectRatio": true
  },
  "modules": [
    {
      "type": "title",
      "format": "{user-name-colored}@{host-name-colored}"
    },
    {
      "type": "separator",
      "string": "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
    },
    {
      "type": "os",
      "key": "OS",
      "format": "{name} {version} {arch}"
    },
    {
      "type": "host",
      "key": "Host",
      "format": "{name}"
    },
    {
      "type": "kernel",
      "key": "Kernel",
      "format": "{sysname} {release}"
    },
    {
      "type": "uptime",
      "key": "Uptime"
    },
    {
      "type": "command",
      "key": "Packages",
      "text": "nix_count=$(nix-store -q --references ~/.nix-profile 2>/dev/null | grep -E '^/nix/store/.+-[^-]+$' | sort -u | wc -l | tr -d ' '); if [ \"$nix_count\" = \"0\" ]; then nix_count=$(nix-store -q --references /etc/profiles/per-user/$USER 2>/dev/null | grep -E '^/nix/store/.+-[^-]+$' | sort -u | wc -l | tr -d ' ' || echo '0'); fi; brew_count=$(brew list --formula 2>/dev/null | wc -l | tr -d ' ' || echo '0'); cask_count=$(brew list --cask 2>/dev/null | wc -l | tr -d ' ' || echo '0'); echo \"$nix_count (nix), $brew_count (brew), $cask_count (cask)\""
    },
    {
      "type": "break"
    },
    {
      "type": "cpu",
      "key": "CPU",
      "format": "{name} ({core-count}) @ {freq-max} GHz"
    },
    {
      "type": "cpuusage",
      "key": "CPU Usage"
    },
    {
      "type": "gpu",
      "key": "GPU",
      "format": "{name}"
    },
    {
      "type": "memory",
      "key": "Memory Usage"
    },
    {
      "type": "disk",
      "key": "Disk Usage",
      "folders": "/"
    },
    {
      "type": "display",
      "key": "Display",
      "format": "{width}x{height} @ {refresh-rate}Hz"
    },
    {
      "type": "break"
    },
    {
      "type": "wm",
      "key": "WM",
      "format": "{pretty-name}"
    },
    {
      "type": "wmtheme",
      "key": "WM Theme"
    },
    {
      "type": "shell",
      "key": "Shell",
      "format": "{pretty-name} {version}"
    },
    {
      "type": "terminal",
      "key": "Terminal",
      "format": "{pretty-name}"
    },
    {
      "type": "terminalfont",
      "key": "Font",
      "format": "{name} {size}pt"
    },
    {
      "type": "break"
    },
    {
      "type": "wifi",
      "key": "WiFi",
      "format": "{ssid}"
    },
    {
      "type": "localip",
      "key": "Local IP",
      "format": "{ipv4}",
      "showIpv6": false,
      "showLoop": false
    },
    {
      "type": "publicip",
      "key": "Public IP"
    },
    {
      "type": "bluetooth",
      "key": "Bluetooth"
    },
    {
      "type": "break"
    },
    {
      "type": "command",
      "key": "Git Status",
      "text": "if git rev-parse --git-dir > /dev/null 2>&1; then changes=$(git status --porcelain | wc -l | tr -d ' '); if [ \"$changes\" -eq 0 ]; then echo 'Clean'; else echo \"$changes changes\"; fi; else echo 'Not a repo'; fi"
    },
    {
      "type": "command",
      "key": "Node",
      "text": "node --version 2>/dev/null | sed 's/v//' || echo 'Not installed'"
    },
    {
      "type": "command",
      "key": "Python",
      "text": "python3 --version 2>/dev/null | cut -d' ' -f2 || echo 'Not installed'"
    },
    {
      "type": "media",
      "key": "Media"
    },
    {
      "type": "break"
    },
    {
      "type": "battery",
      "key": "Battery",
      "format": "{capacity}% ({status})"
    },
    {
      "type": "locale",
      "key": "Locale"
    },
    {
      "type": "datetime",
      "key": "Time",
      "format": "{month-name-short} {day-pretty}, {year} {hour-pretty}:{minute-pretty}"
    },
    {
      "type": "break"
    },
    {
      "type": "colors",
      "symbol": "circle",
      "paddingLeft": 16
    }
  ]
}