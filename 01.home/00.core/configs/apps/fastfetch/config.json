{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "display": {
    "size": {
      "binaryPrefix": "si",
      "ndigits": 2
    },
    "separator": " │ ",
    "key": {
      "width": 14,
      "type": "string"
    },
    "bar": {
      "charElapsed": "━",
      "charTotal": "─",
      "width": 13,
      "border": true
    },
    "percent": {
      "type": 9
    },
    "brightColor": true,
    "color": {
      "keys": "cyan",
      "title": "magenta",
      "separator": "90"
    }
  },
  "logo": {
    "type": "auto",
    "padding": {
      "top": 0,
      "right": 3,
      "bottom": 0,
      "left": 0
    },
    "printRemaining": true,
    "preserveAspectRatio": true
  },
  "modules": [
    {
      "type": "title",
      "format": "{user-name-colored}@{host-name-colored}"
    },
    {
      "type": "separator",
      "string": "─",
      "length": 30
    },
    {
      "type": "os",
      "key": "OS",
      "format": "{name} {architecture}"
    },
    {
      "type": "kernel",
      "key": "Kernel",
      "format": "{sysname} {release}"
    },
    {
      "type": "uptime",
      "key": "Uptime"
    },
    {
      "type": "packages",
      "key": "Packages"
    },
    {
      "type": "shell",
      "key": "Shell",
      "format": "{shell} {version}"
    },
    {
      "type": "terminal",
      "key": "Terminal",
      "format": "{name} {version}"
    },
    {
      "type": "terminalfont",
      "key": "Font",
      "format": "{font}"
    },
    {
      "type": "cpu",
      "key": "CPU",
      "showPeCoreCount": true,
      "temp": true,
      "format": "{name} ({core-count}) @ {freq-base}-{freq-max} GHz"
    },
    {
      "type": "gpu",
      "key": "GPU",
      "detectType": "pci",
      "hideType": "integrated",
      "format": "{vendor} {name}"
    },
    {
      "type": "display",
      "key": "Display",
      "compactType": "scaled",
      "format": "{width}x{height} @ {refresh-rate}Hz"
    },
    {
      "type": "memory",
      "key": "Memory",
      "format": "{used} / {total} ({percent-bar})"
    },
    {
      "type": "swap",
      "key": "Swap",
      "format": "{used} / {total}"
    },
    {
      "type": "disk",
      "key": "Disk (/)",
      "folders": "/",
      "format": "{used} / {size} ({percent-bar})"
    },
    {
      "type": "localip",
      "key": "Local IP",
      "format": "{ipv4} ({ifname})",
      "showIpv6": false,
      "showLoopback": false
    },
    {
      "type": "battery",
      "key": "Battery",
      "format": "{capacity}% ({status})"
    },
    {
      "type": "colors",
      "symbol": "circle",
      "paddingLeft": 14
    }
  ]
}
