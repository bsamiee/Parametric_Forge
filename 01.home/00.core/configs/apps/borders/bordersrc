#!/bin/bash
set -euo pipefail
# Title         : bordersrc
# Author        : Bardia Samiee
# Project       : Parametric Forge
# License       : MIT
# Path          : /01.home/00.core/configs/apps/borders/bordersrc
# ----------------------------------------------------------------------------
# JankyBorders configuration with Dracula theme integration

options=(
  style=round
  width=1.0
  hidpi=on
  active_color=0xfff8f8f2            # White from colors.sh - focused window
  inactive_color=0x80f8f8f2          # Faint white from colors.sh - unfocused windows
  background_color=0x40282a36        # Subtle Dracula background (25% opacity) for window separation
  ax_focus=on                        # Improved compatibility with yabai/AeroSpace
  order=above                        # Render borders above window shadows for consistent appearance
  blur_radius=20                     # Consistent blur with WezTerm
)

exec borders "${options[@]}"
